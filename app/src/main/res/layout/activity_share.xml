<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShareActivity">

    <ImageView
        android:id="@+id/image_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp" />

    <ImageButton
        android:id="@+id/btn_save_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_line"
        android:contentDescription="@string/save"
        android:padding="6dp"
        android:src="@drawable/ic_save"
        android:tint="@color/color_button"
        app:layout_constraintBottom_toTopOf="@id/tv_save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_share_image"
        app:layout_constraintTop_toBottomOf="@+id/image_share"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/btn_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_line"
        android:contentDescription="@string/share"
        android:padding="6dp"
        android:src="@drawable/ic_share"
        android:tint="@color/color_button"
        app:layout_constraintBottom_toTopOf="@id/tv_share"
        app:layout_constraintLeft_toRightOf="@id/btn_save_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_share"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/color_button"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_save_image"
        app:layout_constraintRight_toRightOf="@id/btn_save_image"
        app:layout_constraintTop_toBottomOf="@id/btn_save_image" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:textColor="@color/color_button"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_share_image"
        app:layout_constraintRight_toRightOf="@id/btn_share_image"
        app:layout_constraintTop_toBottomOf="@id/btn_share_image" />

</androidx.constraintlayout.widget.ConstraintLayout>